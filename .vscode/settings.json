{
    "files.exclude": {
        "node_modules/**": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "src/**/*.js": { "when": "$(basename).ts" },
        "src/**/*.js.map": { "when": "$(basename)" },
        "test/**/*.js": { "when": "$(basename).ts" },
        "test/**/*.js.map": { "when": "$(basename)" }
    }
}